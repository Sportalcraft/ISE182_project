<Window x:Class="ISE182_project.Layers.PresentationLayer.GUI.Windows.Error"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ISE182_project.Layers.PresentationLayer.GUI.Windows"
        mc:Ignorable="d"
    Title="Error" Height="150" Width="533.333">
    <Grid>
        <Label Content="{Binding ErrorText, Mode=TwoWay}" Foreground="Red" HorizontalAlignment="Left" Margin="0,0,-0.333,0" VerticalAlignment="Top" FontSize="12" Height="119" Width="527" VerticalContentAlignment="Center" FontWeight="Bold" HorizontalContentAlignment="Center">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEAEAEA" Offset="0"/>
                    <GradientStop Color="#FFEAEAEA" Offset="1"/>
                    <GradientStop Color="#FFC9C9C9" Offset="0.5"/>
                </LinearGradientBrush>
            </Label.Background>

        </Label>

    </Grid>
</Window>
